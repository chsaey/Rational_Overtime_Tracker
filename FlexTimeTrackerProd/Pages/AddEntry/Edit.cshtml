@page
@model FlexTimeTrackerProd.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AddEntry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AddEntry.ID" />
            <div class="form-group">
                <label asp-for="AddEntry.Date" class="control-label"></label>
                <input asp-for="AddEntry.Date" class="form-control" />
                <span asp-validation-for="AddEntry.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddEntry.Minutes" class="control-label"></label>
                <input asp-for="AddEntry.Minutes" class="form-control" />
                <span asp-validation-for="AddEntry.Minutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddEntry.Notes" class="control-label"></label>
                <input asp-for="AddEntry.Notes" class="form-control" />
                <span asp-validation-for="AddEntry.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to List</a>
</div>

