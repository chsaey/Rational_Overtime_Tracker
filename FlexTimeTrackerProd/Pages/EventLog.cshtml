@page
@model FlexTimeTrackerProd.EventLogModel

@{
    ViewData["Title"] = "Event Log";
}

<h1>EventLog</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventLog[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventLog[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventLog[0].Event)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EventLog.Reverse()) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event)
            </td>         
        </tr>
}
    </tbody>
</table>
